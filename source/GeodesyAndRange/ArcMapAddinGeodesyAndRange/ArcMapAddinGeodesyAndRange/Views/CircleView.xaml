<UserControl x:Class="ArcMapAddinGeodesyAndRange.Views.GRCircleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArcMapAddinGeodesyAndRange"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:viewModels="clr-namespace:ArcMapAddinGeodesyAndRange.ViewModels"
             xmlns:prop="clr-namespace:ArcMapAddinGeodesyAndRange.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <viewModels:CircleViewModel x:Key="circleViewModel" />
        <local:EnumToFriendlyNameConverter x:Key="enumItemsConverter" />
        <ObjectDataProvider x:Key="circleFromData"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:TypeExtension TypeName="local:CircleFromTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="lineDistanceData"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:TypeExtension TypeName="local:DistanceTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style TargetType="ComboBox">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Label  Content="{Binding Path=., Mode=OneWay, Converter={StaticResource enumItemsConverter}}"
                                Height="Auto"
                                Margin="0" 
                                VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <StaticResourceExtension ResourceKey="circleViewModel" />
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="{x:Static prop:Resources.LabelCreateCircleFrom}"                
               HorizontalAlignment="Stretch" 
               Grid.ColumnSpan="2" Grid.Row="0" />
        <ComboBox x:Name="cmbCircleFromType"
                ItemsSource="{Binding Source={StaticResource circleFromData}}" 
                SelectedItem="{Binding Path=CircleType, Mode=TwoWay}"                      
                Height="Auto"
                Grid.Row="1" Grid.ColumnSpan="2">
        </ComboBox>
        <Label Content="{x:Static prop:Resources.LabelCenterPoint}"
               Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBox Height="30"
                 Text="{Binding Path=StartPointFormatted, Mode=OneWay}"
                 Grid.Row="3" Grid.Column="0" />
        <Button Content="{x:Static prop:Resources.LabelMapPoint}"
                Command="{Binding ActivateToolCommand}"
                Width="Auto"
                Grid.Row="3" Grid.Column="1" Margin="5,1,0,0" />
        <Label Content="{x:Static prop:Resources.LabelRadiusDiameter}"
               Grid.Row="4" Grid.ColumnSpan="2"/>
        <TextBox Height="30" 
                 Margin="0,0,0,0"
                 Grid.Row="5" Grid.Column="0"/>
        <ComboBox x:Name="cmbLineDistanceType"
                  ItemsSource="{Binding Source={StaticResource lineDistanceData}}" 
                  SelectedItem="{Binding Path=LineDistanceType, Mode=TwoWay}"                      
                  Height="Auto" Margin="5,0,0,0"
                  Grid.Row="5" Grid.Column="1">
        </ComboBox>
        <Button Content="{x:Static prop:Resources.LabelClearGraphics}" 
                ToolTip="{x:Static prop:Resources.LabelClearGraphics}" 
                Command="{Binding ClearGraphicsCommand}"
                Width="100" Height="30" Margin="0,20,0,0"
                Grid.Row="6" Grid.Column="1"/>
    </Grid>
</UserControl>