<UserControl x:Class="ArcMapAddinGeodesyAndRange.Views.GRLinesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArcMapAddinGeodesyAndRange"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:viewModels="clr-namespace:ArcMapAddinGeodesyAndRange.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <viewModels:LinesViewModel x:Key="linesViewModel" />
        <local:EnumToFriendlyNameConverter x:Key="enumItemsConverter" />
        <ObjectDataProvider x:Key="lineData"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:TypeExtension TypeName="local:LineTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="lineFromData"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:TypeExtension TypeName="local:LineFromTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="lineDistanceData"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:TypeExtension TypeName="local:DistanceTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="lineAzimuthData"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:TypeExtension TypeName="local:AzimuthTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style TargetType="ComboBox">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Label  Content="{Binding Path=., Mode=OneWay, Converter={StaticResource enumItemsConverter}}"
                                Height="Auto"
                                Margin="0" 
                                VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <StaticResourceExtension ResourceKey="linesViewModel" />
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock>Lines View</TextBlock>
            <ComboBox x:Name="cmbLineType"
                ItemsSource="{Binding Source={StaticResource lineData}}" 
                SelectedItem="{Binding Path=LineType, Mode=TwoWay}"                      
                Height="Auto">
            </ComboBox>
            <ComboBox x:Name="cmbLineFromType"
                ItemsSource="{Binding Source={StaticResource lineFromData}}" 
                SelectedItem="{Binding Path=LineFromType, Mode=TwoWay}"                      
                Height="Auto">
            </ComboBox>
            <ComboBox x:Name="cmbLineDistanceType"
                ItemsSource="{Binding Source={StaticResource lineDistanceData}}" 
                SelectedItem="{Binding Path=LineDistanceType, Mode=TwoWay}"                      
                Height="Auto">
            </ComboBox>
            <ComboBox x:Name="cmbLineAzimuthType"
                ItemsSource="{Binding Source={StaticResource lineAzimuthData}}" 
                SelectedItem="{Binding Path=LineAzimuthType, Mode=TwoWay}"                      
                Height="Auto">
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
